        //:#_EFC_SPK_VARS_#:[924]:-----------------------://     // [924]
                                                                 // [924]
            const usehunk =( 0 ); //: USE_HUNKER ? ://           // [924]
                                                                 // [924]
        //:-----------------------:#_EFC_SPK_VARS_#:[924]://     // [924]
        //:#_STRIP_FOR_THE_HUNK_#:[924]:-----------------://     // [924]
                                                                 // [924]
            const r13 =( i_r13 );                                // [924]
            const x64 =( i_x64 );                                // [924]
            const y64 =( i_y64 );                                // [924]
            const dpi =( i_dpi );                                // [924]
            const v16 =( i_v16 );                                // [924]
                                                                 // [924]
        //:-----------------:#_STRIP_FOR_THE_HUNK_#:[924]://     // [924]
        //:#_SPARK_EXPLOSION_SHAPE_#:[924]:--------------://     // [924]
                                                                 // [924]
            let es4 =( d_rulbomb_v16_es4[ v16 ] );               // [924]
                                                                 // [924]
        //:--------------:#_SPARK_EXPLOSION_SHAPE_#:[924]://     // [924]
        //:#_GET_ARMS_#:[924]:---------------------------://     // [924]
                                                                 // [924]
            let ax0 =( d_rulbomb_v16_x_0[ v16 ] );               // [924]
            let ax1 =( d_rulbomb_v16_x_1[ v16 ] );               // [924]
            let ay0 =( d_rulbomb_v16_y_0[ v16 ] );               // [924]
            let ay1 =( d_rulbomb_v16_y_1[ v16 ] );               // [924]
                                                                 // [924]
        //:---------------------------:#_GET_ARMS_#:[924]://     // [924]
        //:#_INDEPENDENT_WOMAN_#:[924]:------------------://     // [924]
                                                                 // [924]
            let lx0 =( x64 - ax0 );//: LEF_INCLUSIVE_BOU ://     // [924]
            let lx1 =( x64 + ax1 );//: RIG_INCLUSIVE_BOU ://     // [924]
            let ly0 =( y64 - ay0 );//: TOP_INCLUSIVE_BOU ://     // [924]
            let ly1 =( y64 + ay1 );//: BOT_INCLUSIVE_BOU ://     // [924]
                                                                 // [924]
            if( 1                                                // [924]
            &&  ( lx0 >=( 0x00 ) )//:$_BLAST_BOUNDED_X0_$://     // [924]
            &&  ( lx1 <=( 64-1 ) )//:$_BLAST_BOUNDED_X1_$://     // [924]
            &&  ( ly0 >=( 0x00 ) )//:$_BLAST_BOUNDED_Y0_$://     // [924]
            &&  ( ly1 <=( 64-1 ) )//:$_BLAST_BOUNDED_Y1_$://     // [924]
            ){                                                   // [924]
                usehunk=( 0-1 /** DONT_USE_HUNKER **/ );         // [924]
            }else{                                               // [924]
                usehunk=( 0+1 /** WE_NEED_THEHUNK **/ );         // [924]
            };;                                                  // [924]
        //:------------------:#_INDEPENDENT_WOMAN_#:[924]://     // [924]
        //:#_I_DONT_NEED_NO_ONE_#:[924]:-----------------://     // [924]
        if( use_hunk <= 0 ){                                     // [924]
                                                                 // [924]
            ERR( "[MORE_LOGIC_IN_ANOTHER_VIDEO]" );              // [924]
                                                                 // [924]
        };;                                                      // [924]
        //:-----------------:#_I_DONT_NEED_NO_ONE_#:[924]://     // [924]
        //:#_LOAD_RE_USABLE_HUNK_STRUCTS_#:[924]:--------://     // [924]
        if( use_hunk >= 1 ){                                     // [924]
                                                                 // [924]
            d_hunkhot_lxy.llx=( x64 ); //: LEVEL_LOCAL_X ://     // [924]
            d_hunkhot_lxy.lly=( y64 ); //: LEVEL_LOCAL_Y ://     // [924]
                                                                 // [924]
            d_hunkhot_axy.ax0=( ax0 ); //: ARM_MAG : LEF ://     // [924]
            d_hunkhot_axy.ax1=( ax1 ); //: ARM_MAG : RIG ://     // [924]
            d_hunkhot_axy.ay0=( ay0 ); //: ARM_MAG : TOP ://     // [924]
            d_hunkhot_axy.ay1=( ay1 ); //: ARM_MAG : BOT ://     // [924]
                                                                 // [924]
        };;                                                      // [924]
        //:--------:#_LOAD_RE_USABLE_HUNK_STRUCTS_#:[924]://     // [924]
        //:#_CALL_THE_HUNK_:[924]:-----------------------://     // [924]
        //:                                              ://     // [924]
        //:     INDIRECTLY_CALLS_HIS_BOYS :              ://     // [924]
        //:                                              ://     // [924]
        //:     0. HUNKRIN : Chunks RIN style explosions ://     // [924]
        //:     1. HUNKLAZ : Chunks LAZ style explosions ://     // [924]
        //:     2. HUNKJAX : Chunks JAX style explosions ://     // [924]
        //:     3. HUNKBOX : Chunks BOX style explosions ://     // [924]
        //:                                              ://     // [924]
        //:     ( ORDERED BY ES4 ENUM )                  ://     // [924]
        //:----------------------------------------------://     // [924]
        if( use_hunk >= 1 ){                                     // [924]
                                                                 // [924]
            const lxy =( d_hunkhot_lxy );                        // [924]
            const axy =( d_hunkhot_axy );                        // [924]
            const huk =( d_hunkhot_huk );                        // [924]
                                                                 // [924]
            F_HUNKHOT_R13_TE7_ES4_LXY_AXY_HUK(                   // [924]
                      r13,te7,es4,lxy,axy,huk );;                // [924]
                                                                 // [924]
        };;                                                      // [924]
        //:-----------------------:#_CALL_THE_HUNK_:[924]://     // [924]
        //:#_DO_STUFF_WITH_THE_HUNK_#:[924]:-------------://     // [924]
        if( use_hunk >= 1 ){ //:::::::::[ TERMINAL_HUNK ]://     // [924]
                                                                 // [924]
            for( idk ; i_dont_fucking_know_yet ; idk ){          // [924]
                                                                 // [924]
                r13=( i_dont_know_yet );                         // [924]
                x64=( i_dont_know_yet );                         // [924]
                y64=( i_dont_know_yet );                         // [924]
                v16=( i_dont_know_yet );                         // [924]
                                                                 // [924]
                F_BOMSIMP_EFC_AIB_R13_X64_Y64_DPI_V16(           // [924]
                                  r13,x64,y64,dpi,v16 );         // [924]
                                                                 // [924]
            };;                                                  // [924]
        };; //::::::::::::::::::::::::::[ TERMINAL_HUNK ]://     // [924]
        //:-------------:#_DO_STUFF_WITH_THE_HUNK_#:[924]://     // [924]


