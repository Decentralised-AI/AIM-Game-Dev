    [ NEXT_ROOM_TO_THE_TRLB ] :-------------------------------+  // [1_068]
                                                              |  // [1_068]
        Next Room To The TLRB ( Top || Lef || Rig | Bot )     |  // [1_068]
        Using the Room_To_Room(rtr)table.                     |  // [1_068]
                                                              |  // [1_068]
    :-------------------------------: [ NEXT_ROOM_TO_THE_TRLB ]  // [1_068]
    #_SET_EDGE_TOUCHING_LLX_# :-------------------------------+  // [1_068]
    #_SET_EDGE_TOUCHING_LLY_# :-------------------------------+  // [1_068]
                                                              |  // [1_068]
        Before entering the loop, [llx,lly] needs to be       |  // [1_068]
        situated on the correct edge of the level.            |  // [1_068]
                                                              |  // [1_068]
            IF:GOING_RIG : [llx,lly]ON_THE[ LEF_EDG ].        |  // [1_068]
            IF:GOING_LEF : [llx,lly]ON_THE[ RIG_EDG ].        |  // [1_068]
            IF:GOING_TOP : [llx,lly]ON_THE[ BOT_EDG ].        |  // [1_068]
            IF:GOING_BOT : [llx,lly]ON_THE[ TOP_EDG ].        |  // [1_068]
                                                              |  // [1_068]
        [1]===( Data Pixel Index Of 1st Adjacent Room )       |  // [1_068]
        [2]===( Data Pixel Index Of 2nd Adjacent Room )       |  // [1_068]
                                                              |  // [1_068]
        [A]===( dpi_001+( llx +(lly*2048) )                   |  // [1_068]
        [C]===( dpi_002+( llx +(lly*2048) )                   |  // [1_068]
                                                              |  // [1_068]
        [B]===( [A] +( full_jumps * offset_index ) );         |  // [1_068]
        [D]===( [C] +( full_jumps * offset_index ) );         |  // [1_068]
                                                              |  // [1_068]
        [1][ ][ ][ ][ ][ ][ ][ ] [2][ ][ ][ ][ ][ ][ ][ ]     |  // [1_068]
        [ ]                  [ ] [ ]                  [ ]     |  // [1_068]
        [ ]                  [ ] [ ]                  [ ]     |  // [1_068]
        [A] > > > > > > > >  [B] [C] > > > > > > > >  [D]     |  // [1_068]
        [ ]                  [ ] [ ]                  [ ]     |  // [1_068]
        [ ]                  [ ] [ ]                  [ ]     |  // [1_068]
        [ ]                  [ ] [ ]                  [ ]     |  // [1_068]
        [ ][ ][ ][ ][ ][ ][ ][ ] [ ][ ][ ][ ][ ][ ][ ][ ]     |  // [1_068]
        GOING_RIG > > > > > > > > > > > > > > > GOING_RIG     |  // [1_068]
                                                              |  // [1_068]
        @full_jumps@ : The number of jumps in tiles to go     |  // [1_068]
                     : from [A] to [B] in tiles.              |  // [1_068]
                                                              |  // [1_068]
        @offset_index@ : A 1D value that can be applied       |  // [1_068]
                       : to a[ data_pixel_index ]in order     |  // [1_068]
                       : to move it's corresponding           |  // [1_068]
                       : [dpx,dpy] [ up | down | lef | rig ]. |  // [1_068]
                                                              |  // [1_068]
    :-------------------------------: #_SET_EDGE_TOUCHING_LLY_#  // [1_068]
    :-------------------------------: #_SET_EDGE_TOUCHING_LLX_#  // [1_068]
